@using DreamFishingNew.Models.Rods

@model AddRodFormModel

@{
    ViewData["Title"] = "Add Rod";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Rod</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="Enter model here">
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="Enter brand here">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter description here"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input asp-for="Image" class="form-control" placeholder="Enter image url here">
                <span asp-validation-for="Image" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight"></label>
                <input asp-for="Weight" class="form-control" placeholder="Enter weight in grams here">
                <span asp-validation-for="Weight" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CastingWeight"></label>
                <input asp-for="CastingWeight" class="form-control" placeholder="Enter castingweight here">
                <span asp-validation-for="CastingWeight" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length"></label>
                <input asp-for="Length" class="form-control" placeholder="Enter length in centimeters  here">
                <span asp-validation-for="Length" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Enter price here">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" placeholder="Enter quantity here">
                <span asp-validation-for="Quantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartsCount"></label>
                <input asp-for="PartsCount" class="form-control" placeholder="Enter parts count here">
                <span asp-validation-for="PartsCount" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" placeholder="Enter type here">
                <span asp-validation-for="Type" class="small text-danger"></span>
            </div>


            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>
