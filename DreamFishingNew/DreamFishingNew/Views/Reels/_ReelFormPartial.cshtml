@using DreamFishingNew.Models.Reels

@model AddReelFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" placeholder="Enter brand here">
        <span asp-validation-for="Brand" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" placeholder="Enter model here">
        <span asp-validation-for="Model" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter description here"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" placeholder="Enter image url here">
        <span asp-validation-for="Image" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" placeholder="Enter weight in grams here">
        <span asp-validation-for="Weight" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BalbearingsCount"></label>
        <input asp-for="BalbearingsCount" class="form-control" placeholder="Enter balbearing count here">
        <span asp-validation-for="BalbearingsCount" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GearRatio"></label>
        <input asp-for="GearRatio" class="form-control" placeholder="Enter gear ratio here">
        <span asp-validation-for="GearRatio" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Enter price here">
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" placeholder="Enter quantity here">
        <span asp-validation-for="Quantity" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LineCapacity"></label>
        <input asp-for="LineCapacity" class="form-control" placeholder="Enter line capacity here">
        <span asp-validation-for="LineCapacity" class="small text-danger"></span>
    </div>

    <input class="btn btn-primary" type="submit" value="Save" />
</form>
